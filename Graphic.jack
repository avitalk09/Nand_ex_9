// function - doesn't use fields (kind of like static, doesn't depend on the instance), methods - else

// constructore and destructor
constructor Graphic new(){
    // Blackout the screen 
    do Screen.setColor(false); 
    do Screen.drawRectangle(0,0,511,255);
    return this;
}

method void dispose () {
    do Memory.deAlloc(this);
    return;

}    

// function used by single game, to render the choices
method void drawHand (int userChoice,int UserSide) {
    // 1 -> Rock, 2 -> Paper, 3 -> Scissors
    // 1 -> user -> left, 2 -> computer -> right
    
    if (UserSide = 1){
        if(userChoice = 1){
            do Graphic.rockLeft();
        } 
        else{
            if(userChoice = 2){
                do Graphic.paperLeft();
            }
            else{
                if (userChoice = 3){
                    do Graphic.scissorLeft();
                }
            }

        }
    }
    else{ // else means computer 
        if(userChoice = 1){
            do Graphic.rockRight();
        } 
        else{
            if(userChoice = 2){
                do Graphic.paperRight();
            }
            else{
                if (userChoice = 3){
                    do Graphic.scissorRight();
                }
            }

        }
    }
    return;
}

