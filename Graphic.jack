// functions used by RPSgame to update the rendering of scores
method void Plus1User(int userScore) {
    // each time we draw a heart so we just need to add one based on score
    if(userScore = 1){
        do Graphic.drawHeart(6082);
    } 
    else{
        if(userScore = 2){
            do Graphic.drawHeart(6084);

        }
        else{
            do Graphic.drawHeart(6086);     

        }
    }
    return; 
    }
method void Plus1Computer(int compScore) { 
    if(compScore = 1){
        do Graphic.drawHeart(6109);

    }
    else{
        if(compScore = 2){
            do Graphic.drawHeart(6107);
        }
        else{
            do Graphic.drawHeart(6105);

        }
    }
    return; 
}

